{
  "compilerOptions": {
    "target": "es2016", // Target a specific ECMAScript version
    "module": "commonjs", // Use CommonJS for Node.js compatibility
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip checking types in declaration files
    "outDir": "./dist", // Specify where compiled files should go
    "rootDir": "./src", // Specify the root directory for input files
    "moduleResolution": "node", // Resolve modules using Node's resolution algorithm
    "resolveJsonModule": true, // Allow importing JSON modules
    "allowSyntheticDefaultImports": true, // Allow default imports even if they don't exist in the module
    "isolatedModules": true // Ensure each file can be safely transpiled
  },
  "include": ["src"], // Specify the folder where source code exists
  "exclude": ["node_modules", "dist"] // Exclude unnecessary folders from compilation
}
